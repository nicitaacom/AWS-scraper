{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "index.ts",
    "env.d.ts", 
    "utils/**/*", 
    "libs/**/*",  
    "interfaces/**/*"
  ],
  "exclude": ["node_modules", "dist", "types"]
}
